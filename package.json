{
  "name": "clustery",
  "version": "0.1.0",
  "description": "A node cluster manager",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "babel src/index.js --out-file dist/index.js --plugins transform-object-rest-spread --presets=es2015",
    "release": "npm run build && np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmseguin/clustery.git"
  },
  "author": "Charles-Mathieu Seguin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cmseguin/clustery/issues"
  },
  "homepage": "https://github.com/cmseguin/clustery#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "jest": "22.0.6",
    "np": "2.18.3"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "<rootDir>/tests/**/*.spec.js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/data/",
      ".*/_.*"
    ]
  }
}
